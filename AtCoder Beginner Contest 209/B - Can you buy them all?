import java.util.Scanner;

public class Main{

static Scanner in=new Scanner(System.in);

public static void main(String[] amit){

int n=in.nextInt();

long x=in.nextLong();

long a[]=new long[n+1];

for(int i=1;i<=n;i++){

a[i]=in.nextLong();

}

for(int i=1;i<=n;i++){

if(i%2==0){

a[i]--;

}

}

long sum=0;

for(long i: a){

sum+=i;

}

if( sum<=x ){

System.out.println("Yes");

}else{

System.out.println("No");

}

}

}
